generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model FavoriteList {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model User {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  email               String  @unique(map: "email_1")
  forgotPasswordToken String?
  name                String
  password            String
  refreshToken        String?
  verify              Boolean @default(false)
  verifyEmailToken    String?
}

model WatchList {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
